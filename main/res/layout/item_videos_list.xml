<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/video_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/img1"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/video_time_image"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_toEndOf="@+id/video_image"
        android:layout_below="@+id/video_title_text"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/margin_5dp"
        android:layout_marginStart="@dimen/margin_5dp"
        android:layout_marginEnd="@dimen/margin_2dp"
        android:src="@drawable/time"/>

    <TextView
        android:id="@+id/video_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/video_image"
        android:layout_marginStart="@dimen/margin_5dp"
        android:layout_marginTop="@dimen/margin_5dp"
        android:layout_marginBottom="@dimen/margin_2dp"
        android:layout_marginEnd="@dimen/margin_5dp"
        android:textAllCaps="true"
        android:textSize="16sp"
        android:textColor="@color/colorBlack"/>

    <TextView
        android:id="@+id/video_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/video_time_image"
        android:layout_below="@+id/video_title_text"
        android:layout_marginStart="@dimen/margin_5dp"
        android:layout_marginTop="@dimen/margin_2dp"
        android:layout_marginBottom="@dimen/margin_2dp"
        android:layout_marginEnd="@dimen/margin_5dp"
        android:textSize="12sp"
        android:textAllCaps="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/video_description_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_toEndOf="@+id/video_image"
        android:layout_below="@+id/video_time_text"
        android:layout_marginStart="@dimen/margin_5dp"
        android:layout_marginTop="@dimen/margin_2dp"
        android:layout_marginBottom="@dimen/margin_2dp"
        android:layout_marginEnd="@dimen/margin_5dp"/>

        </RelativeLayout>
</android.support.v7.widget.CardView>


    </LinearLayout>